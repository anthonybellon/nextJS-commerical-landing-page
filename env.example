# Example environment variables for the Next.js project
# Copy this file to .env.local and fill in the values

# General settings
NEXT_PUBLIC_API_URL= # Base URL for the API
NEXT_PUBLIC_ENVIRONMENT= # Current environment (development, production, etc.)

# Firebase configuration
NEXT_PUBLIC_FIREBASE_API_KEY= # Firebase API Key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN= # Firebase Auth Domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID= # Firebase Project ID
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET= # Firebase Storage Bucket
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID= # Firebase Messaging Sender ID
NEXT_PUBLIC_FIREBASE_APP_ID= # Firebase App ID

# Tailwind CSS configuration
TAILWIND_MODE= # Tailwind CSS mode (build, watch)

# Additional configuration
NEXT_PUBLIC_ANALYTICS_ID= # Analytics ID (if applicable)
NEXT_PUBLIC_FEATURE_FLAG= # Feature flags for enabling/disabling features

# Example custom environment variable
# CUSTOM_VAR_NAME= # Description of the custom variable
