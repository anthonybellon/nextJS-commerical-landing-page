{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "esnext",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/app/pages/*"],
      "@styles/*": ["src/app/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@models/*": ["src/models/*"],
      "@store/*": ["src/store/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "jest.setup.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "global.d.ts",
    "src/_document.js"
  ],
  "exclude": ["node_modules"]
}
